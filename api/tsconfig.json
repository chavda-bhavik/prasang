{
    "compileOnSave": false,
    "compilerOptions": {
      "target": "es6",
      "rootDir": "./src", 
      "module": "commonjs",
      "declaration": false,
      "noImplicitAny": false,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "lib": [
        "es2017",
        "es2016",
        "es2015",
        "dom"
      ]
    },
    // "include": [
    //   "src/**/*"
    // ],
    "exclude": [
      "node_modules"
    ]
  }